<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/idPokeapi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="id"/>

    <EditText
        android:id="@+id/namePokeapi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="name"
        />

    <EditText
        android:id="@+id/base_experiencePokeapi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="base_experience"/>

    <EditText
        android:id="@+id/heightPokeapi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="height"/>

    <Button
        android:id="@+id/verAtributos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="verAtributos"
        android:onClick="verAtributos" />

</LinearLayout>
